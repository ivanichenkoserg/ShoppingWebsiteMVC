@model IEnumerable<ShoppingWebsiteMVC.Models.Feedback>

@{
    ViewBag.Title = "Feedback";
    ViewBag.six = "active";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}

<h2>Feedback</h2>

<div class="table-responsive">
    <table class="table table-striped table-primary">
        <thead class="thead-light">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Products.ProductName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Users.Firstname)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FeedBack)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Products.ProductName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Users.Firstname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FeedBack)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@Html.ActionLink("Back", "Settings", null, new { @class = "btn btn-info" })
